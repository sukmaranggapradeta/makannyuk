<!-- !PAGE CONTENT! -->
<div class="w3-main w3-content w3-padding" style="max-width:1200px;margin-top:100px">
  
  <!-- About Section -->
  <div class="w3-container w3-padding-32 w3-center">  
    <h2><%=data.food_name%></h2><br>
    <img src="../upload/<%=data.picture%>" alt="Me" class="w3-image" style="display:block;margin:auto" width="200" height="200">
    <div class="w3-padding-32">
      <h4><b>Category: <%=data.Category.category_name%></b></h4>
      <h6><i>With Passion For Real, Good Food</i></h6>
      <p><%=data.description%></p>
      <h4>Bahan terbaiknya</h4>
      <table>
          <tr>
            <%for(let i = 0; i < data.Ingredients.length; i++){ %>
               - <%=data.Ingredients[i].ingredient_name%>
                <% } %>
            </tr>
  <!-- Load Facebook SDK for JavaScript -->
  <div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.0";
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));</script>

  <!-- Your share button code -->
  <div class="fb-share-button" 
    data-href="https://www.your-domain.com/your-page.html" 
    data-layout="button_count">
  </div>
      </table>
           
        

      
    </div>
  </div>
